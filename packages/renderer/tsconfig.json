{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",

    "paths": {
      "/@/*": ["./src/*"]
    },

    "lib": ["ESNext", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "types": ["vite/client", "react", "react-dom"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "types/**/*.d.ts", "../../types/**/*.d.ts", "../preload/preload.d.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "*.config.js", "dist"]
}
