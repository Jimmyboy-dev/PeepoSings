{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    // "strict": true,
    "isolatedModules": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "types"],
    "lib": ["ESNext"],
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "paths": {
      "types/*": ["./types/*"]
    }
  }
}
